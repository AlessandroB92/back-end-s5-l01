@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <h1 class="display-4 fw-bold">Registration</h1>
    <form class="d-flex flex-column align-items-center">
        <label for="Name"></label>
        <input type="text" id="name" placeholder="FirstName..." style="width: 20%; margin: 10px" />
        <label for="Surname"></label>
        <input type="text" id="cognome" placeholder="LastName..." style="width: 20%; margin: 10px" />
        <label for="Address"></label>
        <input type="text" id="address" placeholder="Address..." style="width: 20%; margin: 10px" />
        <label for="cf"></label>
        <input type="text" id="taxcode" placeholder="Tax Code..." style="width: 20%; margin: 10px" />
        <fieldset class="d-flex flex-column mb-4">
            <legend class="text-decoration-underline">Marital Status:</legend>
            <div>
                <input type="radio" value="false" id="isMarried" name="isMarried" />
                <label for="conjugality">Married</label>
                <input type="radio" value="true" id="isMarried" name="isMarried " />
                <label for="conjugality">Single</label>
            </div>
        </fieldset>
        <fieldset class="mt-2 d-flex flex-column">
            <label for="hildren" class="fw-bold">Child / Children: </label>
            <input type="number" id="childrenCount" min="0" />
        </fieldset>
        <fieldset class="mt-2 d-flex flex-column">
            <label for="position" class="fw-bold">Position:</label>
            <input type="text" id="position" name="position">
        </fieldset>
    </form>
</div>
