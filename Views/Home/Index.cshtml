@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <h1 class="display-4 fw-bold">Welcome!</h1>
    <form class="d-flex flex-column align-items-center">
        <label for="Name"></label>
        <input type="text" id="name" placeholder="Name..." style="width: 20%; margin: 10px" />
        <label for="Surname"></label>
        <input type="text" id="cognome" placeholder="Surname..." style="width: 20%; margin: 10px" />
        <label for="Address"></label>
        <input type="text" id="address" placeholder="Address..." style="width: 20%; margin: 10px" />
        <label for="cf"></label>
        <input type="text" id="cf" placeholder="CF..." style="width: 20%; margin: 10px" />
        <fieldset class="d-flex flex-column mb-4">
            <legend class="text-decoration-underline">Marital Status:</legend>
            <div>
            <input type="radio" value="status" id="sigle" name="conjugality"  />
            <label for="conjugality">Single</label>
            <input type="radio" value="status" id="married" name="conjugality "   />
            <label for="conjugality">Married</label>
            </div>
        </fieldset>
        <fieldset>
            <label for="hildren" class="fw-bold">Child / Children: </label>
            <input type="number"  />
        </fieldset>
    </form>
</div>
